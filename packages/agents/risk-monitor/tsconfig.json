{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@solana-agent-sdk/core": ["../../core/src"]
    }
  },
  "include": ["src/**/*", "../../core/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
